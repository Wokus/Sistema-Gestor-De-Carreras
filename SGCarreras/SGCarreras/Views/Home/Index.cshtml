@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid px-0">
    <div id="mainCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://recorremaldonado.com/wp-content/uploads/2024/12/PUNTAOK1-1024x806.jpg" class="d-block w-100 carousel-image" alt="Carreras">
                <div class="carousel-caption">
                    <h2 class="display-4 fw-bold">Gestión de Carreras Deportivas</h2>
                    <p class="lead">Administrá y consultá eventos deportivos en la región</p>
                    <a href="/Carreras/Calendarios" class="btn btn-primary btn-lg mt-3">Ver Carreras</a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://recorremaldonado.com/wp-content/uploads/2024/12/LABARRAOK-1024x806.jpg" class="d-block w-100 carousel-image" alt="Atletas">
                <div class="carousel-caption">
                    <h2 class="display-4 fw-bold">Experiencia para Atletas</h2>
                    <p class="lead">Manejo fácil y rápido para preinscripciones y resultados</p>
                    <a href="/Corredors/Registrar" class="btn btn-success btn-lg mt-3">Registrarse</a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://recorremaldonado.com/wp-content/uploads/2024/12/maldonadook-1-1024x806.jpg" class="d-block w-100 carousel-image" alt="Organizadores">
                <div class="carousel-caption">
                    <h2 class="display-4 fw-bold">Soluciones para Organizadores</h2>
                    <p class="lead">Plataforma integral para optimizar la gestión de eventos</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Anterior</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Siguiente</span>
        </button>
    </div>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-lg h-100">
                <img src="https://recorremaldonado.com/wp-content/uploads/2024/12/PUNTAOK1-1024x806.jpg" class="card-img-top" alt="Próximas Carreras">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold">Próximas Carreras</h5>
                    <p class="card-text">No te pierdas los próximos eventos deportivos en tu zona</p>
                    <a href="/Carreras/Calendarios" class="btn btn-outline-primary btn-sm">Ver Calendario</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="text-center mb-5">
                <h1 class="display-5 fw-bold text-primary">Bienvenido a SGCarreras</h1>
                <p class="lead">Tu plataforma integral para la gestión de carreras deportivas</p>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-running fa-3x text-primary mb-3"></i>
                            <h5 class="card-title">Para Corredores</h5>
                            <p class="card-text">Inscripciones fáciles, seguimiento de resultados en tiempo real</p>
                            <a href="/Corredors/LogIn" class="btn btn-outline-secondary">Acceder</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

            <div class="row mt-5 text-center">
                <div class="col-md-4">
                    <h3 class="fw-bold text-primary">50+</h3>
                    <p class="text-muted">Carreras Registradas</p>
                </div>
                <div class="col-md-4">
                    <h3 class="fw-bold text-success">5,000+</h3>
                    <p class="text-muted">Corredores Activos</p>
                </div>
                <div class="col-md-4">
                    <h3 class="fw-bold text-warning">15+</h3>
                    <p class="text-muted">Organizadores</p>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-lg h-100">
                <img src="https://recorremaldonado.com/wp-content/uploads/2024/12/LABARRAOK-1024x806.jpg" class="card-img-top" alt="Resultados">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold">Resultados</h5>
                    <p class="card-text">Consulta los resultados de carreras anteriores</p>
                    <a href="/Carreras/Calendarios?filtro=Finalizadas" class="btn btn-outline-success btn-sm">Ver Resultados</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="bg-primary text-white py-5 mt-5">
    <div class="container text-center">
        <h2 class="display-6 fw-bold">¿Listo para comenzar?</h2>
        <p class="lead mb-4">Únete a nuestra comunidad de corredores y organizadores</p>
        <div class="d-flex justify-content-center gap-3 flex-wrap">
            <a href="/Corredors/Registrar" class="btn btn-light btn-lg">Registrarse como Corredor</a>
        </div>
    </div>
</div>

<style>
    .carousel-image {
        height: 70vh;
        object-fit: cover;
        object-position: center;
    }

    .carousel-caption {
        background: rgba(0, 0, 0, 0.6);
        border-radius: 15px;
        padding: 2rem;
        bottom: 20%;
    }

    .carousel-control-prev,
    .carousel-control-next {
        width: 5%;
    }

    .card {
        transition: transform 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
    }

    .fas {
        font-family: 'Font Awesome 5 Free';
        font-weight: 900;
    }

    .fa-running::before { content: "🏃"; }
    .fa-trophy::before { content: "🏆"; }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
