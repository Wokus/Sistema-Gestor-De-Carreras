@model IEnumerable<SGCarreras.Models.Corredor>

@{
    ViewData["Title"] = "Gestión de Corredores";

    // Contadores usando el enum correcto
    var totalCorredores = Model?.Count() ?? 0;
    var totalHombres = Model?.Count(c => c.Sexo.ToString().ToLower().Contains("hombre")) ?? 0;
    var totalMujeres = Model?.Count(c => c.Sexo.ToString().ToLower().Contains("mujer")) ?? 0;

    // Para nacionalidad, verificamos si existe la propiedad
    var nacionalidadesCount = 0;
    try
    {
        nacionalidadesCount = Model?.Select(c => c.Nacionalidad)?.Distinct()?.Count() ?? 0;
    }
    catch
    {
        // Si la propiedad Nacionalidad no existe, mostramos 0
        nacionalidadesCount = 0;
    }
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-5 fw-bold text-primary mb-2">Gestión de Corredores</h1>
            <p class="lead text-muted">Administra los corredores registrados en el sistema</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="fas fa-user-plus me-2"></i>Nuevo Corredor
            </a>
        </div>
    </div>

    <!-- Estadísticas Rápidas -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card border-0 bg-primary text-white">
                <div class="card-body text-center py-3">
                    <i class="fas fa-users fa-2x mb-2"></i>
                    <h5 class="card-title mb-1">Total Corredores</h5>
                    <p class="card-text fs-4 fw-bold mb-0">@totalCorredores</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-0 bg-success text-white">
                <div class="card-body text-center py-3">
                    <i class="fas fa-male fa-2x mb-2"></i>
                    <h5 class="card-title mb-1">Hombres</h5>
                    <p class="card-text fs-4 fw-bold mb-0">@totalHombres</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-0 bg-info text-white">
                <div class="card-body text-center py-3">
                    <i class="fas fa-female fa-2x mb-2"></i>
                    <h5 class="card-title mb-1">Mujeres</h5>
                    <p class="card-text fs-4 fw-bold mb-0">@totalMujeres</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-0 bg-warning text-white">
                <div class="card-body text-center py-3">
                    <i class="fas fa-flag fa-2x mb-2"></i>
                    <h5 class="card-title mb-1">Nacionalidades</h5>
                    <p class="card-text fs-4 fw-bold mb-0">@nacionalidadesCount</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla de Corredores -->
    <div class="card border-0 shadow-lg">
        <div class="card-header bg-light py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="card-title mb-0">
                    <i class="fas fa-list-alt text-primary me-2"></i>
                    Lista de Corredores
                </h4>
                <div class="d-flex gap-2">
                    <input type="text" id="searchInput" class="form-control" placeholder="Buscar corredor..." style="max-width: 250px;">
                    <button class="btn btn-outline-secondary" id="refreshBtn">
                        <i class="fas fa-sync-alt"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0" id="corredoresTable">
                    <thead class="table-dark">
                        <tr>
                            <th class="ps-4">
                                <i class="fas fa-user me-2"></i>Nombre Completo
                            </th>
                            <th>
                                <i class="fas fa-id-card me-2"></i>Cédula
                            </th>
                            <th>
                                <i class="fas fa-venus-mars me-2"></i>Sexo
                            </th>
                            <th>
                                <i class="fas fa-flag me-2"></i>Nacionalidad
                            </th>
                            <th>
                                <i class="fas fa-envelope me-2"></i>Email
                            </th>
                            <th class="text-center pe-4">
                                <i class="fas fa-cogs me-2"></i>Acciones
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle bg-primary text-white me-3">
                                            @{
                                                var inicial = "?";
                                                if (!string.IsNullOrEmpty(item.NombreCompleto))
                                                {
                                                    var partes = item.NombreCompleto.Split(' ', StringSplitOptions.RemoveEmptyEntries);
                                                    inicial = partes.Last().Substring(0, 1).ToUpper();
                                                }
                                            }
                                            @inicial
                                        </div>
                                        <div>
                                            <strong>@Html.DisplayFor(modelItem => item.NombreCompleto)</strong>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@Html.DisplayFor(modelItem => item.Cedula)</span>
                                </td>
                                <td>
                                    @{
                                        var sexoBadgeClass = "bg-secondary";
                                        var sexoIcon = "fa-genderless";
                                        var sexoTexto = item.Sexo.ToString() ?? "No especificado";

                                            var sexoStr = item.Sexo.ToString().ToLower();
                                            if (sexoStr.Contains("hombre"))
                                            {
                                                sexoBadgeClass = "bg-info";
                                                sexoIcon = "fa-mars";
                                            }
                                            else if (sexoStr.Contains("mujer"))
                                            {
                                                sexoBadgeClass = "bg-pink";
                                                sexoIcon = "fa-venus";
                                            }
                                            else if (sexoStr.Contains("otro"))
                                            {
                                                sexoBadgeClass = "bg-secondary";
                                                sexoIcon = "fa-genderless";
                                            }
                                    }
                                    <span class="badge @sexoBadgeClass">
                                        <i class="fas @sexoIcon me-1"></i>@sexoTexto
                                    </span>
                                </td>
                                <td>
                                    @{
                                        var nacionalidadTexto = "No especificada";
                                        try
                                        {
                                            nacionalidadTexto = item.Nacionalidad ?? "No especificada";
                                        }
                                        catch
                                        {
                                            nacionalidadTexto = "No especificada";
                                        }
                                    }
                                    <span class="badge bg-warning text-dark">
                                        <i class="fas fa-flag me-1"></i>@nacionalidadTexto
                                    </span>
                                </td>
                                <td>
                                    <small class="text-muted">@Html.DisplayFor(modelItem => item.Mail)</small>
                                </td>
                                <td class="text-center pe-4">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm"
                                           data-bs-toggle="tooltip" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm"
                                           data-bs-toggle="tooltip" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"
                                           data-bs-toggle="tooltip" title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-light py-3">
            <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">
                    Mostrando <strong>@totalCorredores</strong> corredores registrados
                </small>
                <div>
                    <button class="btn btn-outline-primary btn-sm" id="exportBtn">
                        <i class="fas fa-download me-1"></i>Exportar
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

