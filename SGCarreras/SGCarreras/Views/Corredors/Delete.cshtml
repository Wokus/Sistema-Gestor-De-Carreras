@model SGCarreras.Models.Corredor

@{
    ViewData["Title"] = "Eliminar Corredor";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="display-5 fw-bold text-danger mb-2">Eliminar Corredor</h1>
                    <p class="lead text-muted">Confirmar eliminación permanente</p>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                    </a>
                </div>
            </div>

            <!-- Alerta de Advertencia -->
            <div class="alert alert-danger border-0 shadow-sm mb-4">
                <div class="d-flex align-items-center">
                    <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                    <div>
                        <h4 class="alert-heading mb-2">¡Atención! Esta acción no se puede deshacer</h4>
                        <p class="mb-0">
                            Está a punto de eliminar permanentemente al corredor del sistema.
                            Todos los datos asociados se perderán irreversiblemente.
                        </p>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-lg">
                <div class="card-header bg-danger text-white py-4">
                    <div class="text-center">
                        <i class="fas fa-user-slash fa-3x mb-3"></i>
                        <h2 class="card-title mb-0">Confirmar Eliminación</h2>
                    </div>
                </div>
                <div class="card-body p-5">
                    <!-- Información del Corredor -->
                    <div class="row mb-5">
                        <div class="col-md-6">
                            <div class="text-center mb-4">
                                <div class="avatar-circle bg-primary text-white mx-auto mb-3" style="width: 80px; height: 80px; font-size: 24px;">
                                    @{
                                        var inicial = "?";
                                        if (!string.IsNullOrEmpty(Model.NombreCompleto))
                                        {
                                            var partes = Model.NombreCompleto.Split(' ', StringSplitOptions.RemoveEmptyEntries);
                                            inicial = partes.Last().Substring(0, 1).ToUpper();
                                        }
                                    }
                                    @inicial
                                </div>
                                <h4 class="fw-bold text-dark">@Model.NombreCompleto</h4>
                                <p class="text-muted mb-0">Corredor</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="bg-light p-4 rounded-3 h-100">
                                <h5 class="fw-semibold text-primary mb-3">
                                    <i class="fas fa-info-circle me-2"></i>Información General
                                </h5>
                                <div class="row g-3">
                                    <div class="col-12">
                                        <small class="text-muted">Cédula:</small>
                                        <div class="fw-bold">@Model.Cedula</div>
                                    </div>
                                    <div class="col-12">
                                        <small class="text-muted">Sexo:</small>
                                        <div>
                                            @{
                                                var sexoBadgeClass = "bg-secondary";
                                                if (Model.Sexo != null)
                                                {
                                                    if (Model.Sexo.ToString().ToLower().Contains("hombre"))
                                                    {
                                                        sexoBadgeClass = "bg-info";
                                                    }
                                                    else if (Model.Sexo.ToString().ToLower().Contains("mujer"))
                                                    {
                                                        sexoBadgeClass = "bg-pink";
                                                    }
                                                }
                                            }
                                            <span class="badge @sexoBadgeClass">@Model.Sexo</span>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <small class="text-muted">Email:</small>
                                        <div class="fw-bold text-truncate">@(Model.Mail ?? "No especificado")</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <!-- Formulario de Eliminación -->
                    <form asp-action="Delete" class="text-center">
                        <input type="hidden" asp-for="Id" />

                        <!-- Confirmación Adicional -->
                        <div class="form-check mb-4 d-inline-block text-start">
                            <input class="form-check-input" type="checkbox" id="confirmDelete" required>
                            <label class="form-check-label fw-semibold" for="confirmDelete">
                                Sí, comprendo que esta acción es irreversible y deseo proceder
                            </label>
                        </div>

                        <!-- Botones de Acción -->
                        <div class="d-flex justify-content-center gap-3 mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg px-4">
                                <i class="fas fa-edit me-2"></i>Editar en Lugar
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg px-4" id="deleteBtn" disabled>
                                <i class="fas fa-trash me-2"></i>Eliminar Permanentemente
                            </button>
                        </div>

                        <div class="mt-3">
                            <small class="text-muted">
                                <i class="fas fa-lightbulb me-1"></i>
                                Recomendación: Considere editar en lugar de eliminar para preservar datos históricos.
                            </small>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Información Adicional -->
            <div class="row mt-4">
                <div class="col-12">
                    <div class="card border-0 bg-light">
                        <div class="card-body">
                            <h5 class="card-title text-primary mb-3">
                                <i class="fas fa-shield-alt me-2"></i>
                                Medidas de Seguridad
                            </h5>
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-check-circle text-success me-2"></i>
                                        <small>Confirmación requerida</small>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-check-circle text-success me-2"></i>
                                        <small>Verificación de impacto</small>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-check-circle text-success me-2"></i>
                                        <small>Alternativas sugeridas</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
        }

    .avatar-circle {
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
    }

    .bg-danger {
        background: linear-gradient(135deg, var(--bs-danger) 0%, #c82333 100%) !important;
    }

    .bg-pink {
        background: linear-gradient(135deg, #e83e8c 0%, #d91a72 100%) !important;
    }

    .btn-danger {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        border: none;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-danger:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(220,53,69,0.3);
        }

        .btn-danger:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

    .form-check-input:checked {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .fas {
        font-family: 'Font Awesome 5 Free';
        font-weight: 900;
    }

    /* Fallbacks para iconos */
    .fa-arrow-left::before {
        content: "⬅️";
    }

    .fa-exclamation-triangle::before {
        content: "⚠️";
    }

    .fa-user-slash::before {
        content: "🚫";
    }

    .fa-info-circle::before {
        content: "ℹ️";
    }

    .fa-chart-bar::before {
        content: "📊";
    }

    .fa-times::before {
        content: "❌";
    }

    .fa-edit::before {
        content: "✏️";
    }

    .fa-trash::before {
        content: "🗑️";
    }

    .fa-lightbulb::before {
        content: "💡";
    }

    .fa-shield-alt::before {
        content: "🛡️";
    }

    .fa-check-circle::before {
        content: "✅";
    }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const confirmCheckbox = document.getElementById('confirmDelete');
            const deleteBtn = document.getElementById('deleteBtn');

            // Habilitar/deshabilitar botón de eliminar
            confirmCheckbox.addEventListener('change', function() {
                deleteBtn.disabled = !this.checked;
            });

            // Confirmación adicional al hacer clic en eliminar
            deleteBtn.addEventListener('click', function(e) {
                if (!confirm('¿ESTÁ ABSOLUTAMENTE SEGURO?\n\nEsta acción eliminará permanentemente al corredor y todos sus datos asociados.')) {
                    e.preventDefault();
                }
            });

            // Efecto de shake si intentan eliminar sin confirmar
            deleteBtn.addEventListener('mouseover', function() {
                if (this.disabled) {
                    this.classList.add('shake');
                    setTimeout(() => {
                        this.classList.remove('shake');
                    }, 500);
                }
            });
        });
    </script>
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">