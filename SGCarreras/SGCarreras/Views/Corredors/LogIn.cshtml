@model SGCarreras.Models.ViewModels.CorredorLogIn

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="container-fluid min-vh-100 bg-light py-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6 col-lg-5">
            <!-- Header -->
            <div class="text-center mb-5">
                <h1 class="display-4 fw-bold text-primary mb-3">Bienvenido de Vuelta</h1>
                <p class="lead text-muted">Ingresa a tu cuenta para gestionar tus carreras</p>
            </div>

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white py-4 rounded-top-4">
                    <div class="text-center">
                        <i class="fas fa-sign-in-alt fa-3x mb-3"></i>
                        <h2 class="card-title mb-0">Iniciar Sesión</h2>
                    </div>
                </div>
                <div class="card-body p-5">
                    <form asp-action="LogIn" class="needs-validation" novalidate>

                        <!-- Campo Email -->
                        <div class="form-group mb-4">
                            <label asp-for="Mail" class="form-label fw-semibold">
                                <i class="fas fa-envelope me-2 text-primary"></i>Email
                            </label>
                            <input asp-for="Mail" type="email" class="form-control form-control-lg"
                                   placeholder="ejemplo@correo.com" required />
                            <span asp-validation-for="Mail" class="text-danger small"></span>
                        </div>

                        <!-- Campo Contraseña -->
                        <div class="form-group mb-4">
                            <label asp-for="Contra" class="form-label fw-semibold">
                                <i class="fas fa-lock me-2 text-primary"></i>Contraseña
                            </label>
                            <input asp-for="Contra" type="password" class="form-control form-control-lg"
                                   placeholder="Ingresa tu contraseña" required />
                            <span asp-validation-for="Contra" class="text-danger small"></span>
                        </div>

                        <!-- Botón de Login -->
                        <button type="submit" class="btn btn-primary btn-lg w-100 py-3 mb-4">
                            <i class="fas fa-sign-in-alt me-2"></i>Iniciar Sesión
                        </button>

                        <!-- Separador -->
                        <div class="position-relative text-center mb-4">
                            <hr>
                            <span class="position-absolute top-50 start-50 translate-middle bg-white px-3 text-muted">
                                o
                            </span>
                        </div>

                        <!-- Enlace de registro -->
                        <div class="text-center">
                            <p class="mb-2">¿No tienes una cuenta?</p>
                            <a asp-action="Registrar" class="btn btn-outline-primary btn-lg w-100">
                                <i class="fas fa-user-plus me-2"></i>Crear Cuenta Nueva
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Información Adicional -->
            <div class="row mt-4 text-center">
                <div class="col-md-4 mb-3">
                    <div class="d-flex align-items-center justify-content-center">
                        <i class="fas fa-shield-alt text-success me-2"></i>
                        <small class="text-muted">Conexión segura</small>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="d-flex align-items-center justify-content-center">
                        <i class="fas fa-bolt text-warning me-2"></i>
                        <small class="text-muted">Acceso rápido</small>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="d-flex align-items-center justify-content-center">
                        <i class="fas fa-users text-primary me-2"></i>
                        <small class="text-muted">Comunidad activa</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .min-vh-100 {
        min-height: 100vh;
    }

    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.1) !important;
        }

    .form-control {
        border: 2px solid #e9ecef;
        border-radius: 10px;
        padding: 0.75rem 1rem;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.25rem rgba(0,123,255,0.25);
            transform: translateY(-2px);
        }

    .form-control-lg {
        padding: 1rem 1.25rem;
        font-size: 1.1rem;
    }

    .btn-primary {
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
        border: none;
        border-radius: 10px;
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(0,123,255,0.3);
        }

    .btn-outline-primary {
        border: 2px solid #007bff;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-outline-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(0,123,255,0.2);
        }

    .bg-primary {
        background: linear-gradient(135deg, var(--bs-primary) 0%, var(--bs-primary) 100%) !important;
    }

    .form-check-input:checked {
        background-color: #007bff;
        border-color: #007bff;
    }

    .fas {
        font-family: 'Font Awesome 5 Free';
        font-weight: 900;
    }

    /* Fallbacks para iconos */
    .fa-sign-in-alt::before {
        content: "🔑";
    }

    .fa-envelope::before {
        content: "📧";
    }

    .fa-lock::before {
        content: "🔒";
    }

    .fa-key::before {
        content: "🔑";
    }

    .fa-user-plus::before {
        content: "👤";
    }

    .fa-shield-alt::before {
        content: "🛡️";
    }

    .fa-bolt::before {
        content: "⚡";
    }

    .fa-users::before {
        content: "👥";
    }

    .fa-info-circle::before {
        content: "ℹ️";
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Validación de formulario
            const form = document.querySelector('.needs-validation');

            form.addEventListener('submit', function(e) {
                if (!form.checkValidity()) {
                    e.preventDefault();
                    e.stopPropagation();
                }
                form.classList.add('was-validated');
            });

            // Efectos visuales para inputs
            const inputs = document.querySelectorAll('.form-control');
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.parentElement.classList.add('focused');
                });

                input.addEventListener('blur', function() {
                    if (this.value === '') {
                        this.parentElement.classList.remove('focused');
                    }
                });
            });

            // Auto-focus en el primer campo
            const firstInput = document.querySelector('input[type="email"]');
            if (firstInput) {
                firstInput.focus();
            }

    </script>
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">