@model SGCarreras.Models.Corredor

@{
    ViewData["Title"] = "LogIn";
}

<h1>LogIn</h1>

<h4>Corredor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="LogIn">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="mail" class="control-label"></label>
                <input asp-for="mail" class="form-control" />
                <span asp-validation-for="mail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="contra" class="control-label"></label>
                <input asp-for="contra" class="form-control" />
                <span asp-validation-for="contra" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="LogIn" class="btn btn-primary" />
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
        </form>
    </div>
</div>

<div>
    No tene una cuenta? <a asp-action="Registrar">Createla, mamahuevo</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
