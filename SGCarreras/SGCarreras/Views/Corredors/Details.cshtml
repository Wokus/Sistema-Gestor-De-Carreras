@model SGCarreras.Models.Corredor
@using static SGCarreras.Models.Estado;
@{
    ViewData["Title"] = "Detalles del Corredor";
    string filtro = ViewBag.FiltroActual as string ?? "Todas";
    var listaRegistros = Model.registros;
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="display-5 fw-bold text-primary mb-2">Detalles del Corredor</h1>
                    <p class="lead text-muted">Información completa y historial de carreras</p>
                </div>
                <div>
                    <a href="javascript:history.back()" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Volver
                    </a>
                </div>
            </div>

            <!-- Información Principal -->
            <div class="row mb-5">
                <div class="col-md-4">
                    <div class="card border-0 bg-primary text-white text-center h-100">
                        <div class="card-body py-5">
                            <div class="avatar-circle bg-white text-primary mx-auto mb-4" style="width: 100px; height: 100px; font-size: 36px;">
                                @{
                                    var inicial = "?";
                                    if (!string.IsNullOrEmpty(Model.NombreCompleto))
                                    {
                                        var partes = Model.NombreCompleto.Split(' ', StringSplitOptions.RemoveEmptyEntries);
                                        inicial = partes.Last().Substring(0, 1).ToUpper();
                                    }
                                }
                                @inicial
                            </div>
                            <h3 class="card-title fw-bold">@Model.NombreCompleto</h3>
                            <p class="card-text opacity-75">Corredor Registrado</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card border-0 shadow-lg h-100">
                        <div class="card-header bg-light">
                            <h4 class="card-title mb-0">
                                <i class="fas fa-id-card text-primary me-2"></i>
                                Información Personal
                            </h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <dl class="row">
                                        <dt class="col-sm-4 text-muted">Nombre:</dt>
                                        <dd class="col-sm-8 fs-5 fw-bold text-dark">@Model.NombreCompleto</dd>

                                        <dt class="col-sm-4 text-muted">Cédula:</dt>
                                        <dd class="col-sm-8">
                                            <span class="badge bg-secondary fs-6">@Model.Cedula</span>
                                        </dd>
                                    </dl>
                                </div>
                                <div class="col-md-6">
                                    <dl class="row">
                                        <dt class="col-sm-4 text-muted">Sexo:</dt>
                                        <dd class="col-sm-8">
                                            @{
                                                var sexoBadgeClass = "bg-secondary";
                                                var sexoIcon = "fa-genderless";
                                                    if (Model.Sexo.ToString().ToLower().Contains("hombre"))
                                                    {
                                                        sexoBadgeClass = "bg-info";
                                                        sexoIcon = "fa-mars";
                                                    }
                                                    else if (Model.Sexo.ToString().ToLower().Contains("mujer"))
                                                    {
                                                        sexoBadgeClass = "bg-pink";
                                                        sexoIcon = "fa-venus";
                                                    }
                                            }
                                            <span class="badge @sexoBadgeClass fs-6">
                                                <i class="fas @sexoIcon me-1"></i>@Model.Sexo
                                            </span>
                                        </dd>

                                        <dt class="col-sm-4 text-muted">Email:</dt>
                                        <dd class="col-sm-8">
                                            <i class="fas fa-envelope text-muted me-2"></i>
                                            @(Model.Mail ?? "No especificado")
                                        </dd>
                                    </dl>
                                </div>
                            </div>

                            <!-- Estadísticas Rápidas -->
                            <div class="row mt-4 pt-3 border-top">
                                <div class="col-md-3 text-center">
                                    <div class="h3 fw-bold text-primary">@(Model.registros?.Count ?? 0)</div>
                                    <small class="text-muted">Total Carreras</small>
                                </div>
                                <div class="col-md-3 text-center">
                                    <div class="h3 fw-bold text-success">@(Model.registros?.Count(r => r.Carrera?.Estado == EstadoEnum.Activo) ?? 0)</div>
                                    <small class="text-muted">Carreras Activas</small>
                                </div>
                                <div class="col-md-3 text-center">
                                    <div class="h3 fw-bold text-warning">@(Model.registros?.Count(r => r.Carrera?.Estado == EstadoEnum.En_espera) ?? 0)</div>
                                    <small class="text-muted">En Espera</small>
                                </div>
                                <div class="col-md-3 text-center">
                                    <div class="h3 fw-bold text-secondary">@(Model.registros?.Count(r => r.Carrera?.Estado == EstadoEnum.Finalizada) ?? 0)</div>
                                    <small class="text-muted">Finalizadas</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Historial de Carreras -->
            <div class="card border-0 shadow-lg mb-4">
                <div class="card-header bg-light py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="card-title mb-0">
                            <i class="fas fa-trophy text-primary me-2"></i>
                            Historial de Carreras
                        </h4>
                        <div class="btn-group" role="group">
                            <a class="btn btn-outline-primary @(filtro == "Todas" ? "active" : "")"
                               asp-action="Details" asp-route-id="@Model.Id" asp-route-filtro="Todas">
                                <i class="fas fa-list me-1"></i>Todas
                            </a>
                            <a class="btn btn-outline-success @(filtro == "Activas" ? "active" : "")"
                               asp-action="Details" asp-route-id="@Model.Id" asp-route-filtro="Activas">
                                <i class="fas fa-play me-1"></i>Activas
                            </a>
                            <a class="btn btn-outline-warning @(filtro == "EnEspera" ? "active" : "")"
                               asp-action="Details" asp-route-id="@Model.Id" asp-route-filtro="EnEspera">
                                <i class="fas fa-clock me-1"></i>En Espera
                            </a>
                            <a class="btn btn-outline-secondary @(filtro == "Finalizadas" ? "active" : "")"
                               asp-action="Details" asp-route-id="@Model.Id" asp-route-filtro="Finalizadas">
                                <i class="fas fa-flag-checkered me-1"></i>Finalizadas
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th class="ps-4">
                                        <i class="fas fa-flag me-2"></i>Nombre de la Carrera
                                    </th>
                                    <th>
                                        <i class="fas fa-map-marker-alt me-2"></i>Ubicación
                                    </th>
                                    <th>
                                        <i class="fas fa-route me-2"></i>Distancia
                                    </th>
                                    <th>
                                        <i class="fas fa-calendar me-2"></i>Fecha y Hora
                                    </th>
                                    <th>
                                        <i class="fas fa-tag me-2"></i>Estado
                                    </th>
                                    <th class="text-center pe-4">
                                        <i class="fas fa-cogs me-2"></i>Acciones
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in listaRegistros)
                                {
                                    @if (
                                                                    (item.Carrera?.Estado == EstadoEnum.Activo && filtro == "Activas") ||
                                                                    (item.Carrera?.Estado == EstadoEnum.En_espera && filtro == "EnEspera") ||
                                                                    (item.Carrera?.Estado == EstadoEnum.Finalizada && filtro == "Finalizadas") ||
                                                                    (filtro == "Todas")
                                                                    )
                                    {
                                        <tr>
                                            <td class="ps-4">
                                                <div class="fw-semibold text-primary">@item.Carrera?.Nombre</div>
                                            </td>
                                            <td>
                                                <i class="fas fa-map-marker-alt text-muted me-1"></i>
                                                @item.Carrera?.Ubicacion
                                            </td>
                                            <td>
                                                <span class="badge bg-info">
                                                    <i class="fas fa-route me-1"></i>@string.Format("{0:N2} km", item.Carrera?.KmTotales)
                                                </span>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    <i class="fas fa-clock me-1"></i>
                                                    @item.Carrera?.Fecha.ToString("dd/MM/yyyy HH:mm")
                                                </small>
                                            </td>
                                            <td>
                                                <span class="badge @GetEstadoBadgeClass(item.Carrera.Estado)">
                                                    @item.Carrera.Estado.ToString()
                                                </span>
                                            </td>
                                            <td class="text-center pe-4">
                                                <a asp-controller="Carreras" asp-action="Details" asp-route-id="@item.Carrera.Id"
                                                   class="btn btn-sm btn-outline-primary" data-bs-toggle="tooltip" title="Ver detalles de la carrera">
                                                    <i class="fas fa-eye me-1"></i>Ver Carrera
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (!listaRegistros.Any(r =>
                                        (r.Carrera?.Estado == EstadoEnum.Activo && filtro == "Activas") ||
                                        (r.Carrera?.Estado == EstadoEnum.En_espera && filtro == "EnEspera") ||
                                        (r.Carrera?.Estado == EstadoEnum.Finalizada && filtro == "Finalizadas") ||
                                        (filtro == "Todas" && listaRegistros.Any())
                                        ))
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-running fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No se encontraron carreras</h5>
                            <p class="text-muted">El corredor no tiene carreras registradas con el filtro seleccionado.</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Acciones -->
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                    </a>
                </div>
                <div class="btn-group">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit me-2"></i>Editar Corredor
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Eliminar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetEstadoBadgeClass(SGCarreras.Models.Estado.EstadoEnum estado)
    {
        return estado switch
        {
            SGCarreras.Models.Estado.EstadoEnum.Activo => "bg-success",
            SGCarreras.Models.Estado.EstadoEnum.En_espera => "bg-warning text-dark",
            SGCarreras.Models.Estado.EstadoEnum.Finalizada => "bg-secondary",
            _ => "bg-light text-dark"
        };
    }
}

