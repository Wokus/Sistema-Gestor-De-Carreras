@model SGCarreras.Models.Corredor

@{
    ViewData["Title"] = "Crear Corredor";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="display-5 fw-bold text-primary mb-2">Crear Nuevo Corredor</h1>
                    <p class="lead text-muted">Agregar un nuevo corredor al sistema</p>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                    </a>
                </div>
            </div>

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white py-4 rounded-top-4">
                    <div class="text-center">
                        <i class="fas fa-user-plus fa-3x mb-3"></i>
                        <h2 class="card-title mb-0">Información del Corredor</h2>
                    </div>
                </div>
                <div class="card-body p-5">
                    <form asp-action="Create" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Información Personal -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    <label asp-for="NombreCompleto" class="form-label fw-semibold">
                                        <i class="fas fa-user me-2 text-primary"></i>Nombre Completo
                                    </label>
                                    <input asp-for="NombreCompleto" class="form-control form-control-lg"
                                           placeholder="Ej: Juan Pérez García" required />
                                    <span asp-validation-for="NombreCompleto" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    <label asp-for="Cedula" class="form-label fw-semibold">
                                        <i class="fas fa-id-card me-2 text-primary"></i>Cédula
                                    </label>
                                    <input asp-for="Cedula" class="form-control form-control-lg"
                                           placeholder="Ej: 12345678" required />
                                    <span asp-validation-for="Cedula" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Sexo y Nacionalidad -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    <label asp-for="Sexo" class="form-label fw-semibold">
                                        <i class="fas fa-venus-mars me-2 text-primary"></i>Sexo
                                    </label>
                                    <!-- CAMBIO AQUÍ: Quitamos ViewBag.SexoList y usamos valores directos -->
                                    <select asp-for="Sexo" class="form-select form-select-lg" required>
                                        <option value="">-- Seleccione sexo --</option>
                                        <option value="Hombre">Hombre</option>
                                        <option value="Mujer">Mujer</option>
                                        <option value="Otro">Otro</option>
                                    </select>
                                    <span asp-validation-for="Sexo" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    <label class="form-label fw-semibold">
                                        <i class="fas fa-flag me-2 text-primary"></i>Nacionalidad
                                    </label>
                                    <select class="form-select form-select-lg" name="Nacionalidad" required>
                                        <option value="">-- Seleccione nacionalidad --</option>
                                        <option value="Uruguaya">Uruguaya</option>
                                        <option value="Argentina">Argentina</option>
                                        <option value="Brasileña">Brasileña</option>
                                        <option value="Chilena">Chilena</option>
                                        <option value="Paraguaya">Paraguaya</option>
                                        <option value="Otra">Otra</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- Información de Contacto -->
                        <div class="form-group mb-4">
                            <label asp-for="Mail" class="form-label fw-semibold">
                                <i class="fas fa-envelope me-2 text-primary"></i>Email
                            </label>
                            <input asp-for="Mail" type="email" class="form-control form-control-lg"
                                   placeholder="ejemplo@correo.com" required />
                            <span asp-validation-for="Mail" class="text-danger small"></span>
                        </div>

                        <!-- Contraseña -->
                        <div class="form-group mb-4">
                            <label asp-for="Contra" class="form-label fw-semibold">
                                <i class="fas fa-lock me-2 text-primary"></i>Contraseña
                            </label>
                            <input asp-for="Contra" type="password" class="form-control form-control-lg"
                                   placeholder="Ingrese una contraseña segura" required
                                   pattern=".{8,}" />
                            <div class="form-text">
                                <small>La contraseña debe tener al menos 8 caracteres</small>
                            </div>
                            <span asp-validation-for="Contra" class="text-danger small"></span>
                        </div>

                        <!-- Botones de Acción -->
                        <div class="d-flex justify-content-between align-items-center mt-5">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>Crear Corredor
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
        }

    .form-control, .form-select {
        border: 2px solid #e9ecef;
        border-radius: 10px;
        padding: 0.75rem 1rem;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        .form-control:focus, .form-select:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.25rem rgba(0,123,255,0.25);
            transform: translateY(-2px);
        }

    .form-control-lg {
        padding: 1rem 1.25rem;
        font-size: 1.1rem;
    }

    .btn-primary {
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
        border: none;
        border-radius: 10px;
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(0,123,255,0.3);
        }

    .bg-primary {
        background: linear-gradient(135deg, var(--bs-primary) 0%, var(--bs-primary) 100%) !important;
    }

    .fas {
        font-family: 'Font Awesome 5 Free';
        font-weight: 900;
    }

    /* Fallbacks para iconos */
    .fa-user-plus::before {
        content: "👤";
    }

    .fa-arrow-left::before {
        content: "⬅️";
    }

    .fa-user::before {
        content: "👤";
    }

    .fa-id-card::before {
        content: "🆔";
    }

    .fa-venus-mars::before {
        content: "⚧";
    }

    .fa-flag::before {
        content: "🏁";
    }

    .fa-envelope::before {
        content: "📧";
    }

    .fa-lock::before {
        content: "🔒";
    }

    .fa-times::before {
        content: "❌";
    }

    .fa-save::before {
        content: "💾";
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Validación de formulario
            const form = document.querySelector('.needs-validation');

            form.addEventListener('submit', function(e) {
                if (!form.checkValidity()) {
                    e.preventDefault();
                    e.stopPropagation();
                }
                form.classList.add('was-validated');
            });

            // Efectos visuales para inputs
            const inputs = document.querySelectorAll('.form-control, .form-select');
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.parentElement.classList.add('focused');
                });

                input.addEventListener('blur', function() {
                    if (this.value === '') {
                        this.parentElement.classList.remove('focused');
                    }
                });
            });
        });
    </script>
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">