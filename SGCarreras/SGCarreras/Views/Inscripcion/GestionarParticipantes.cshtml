@model IEnumerable<SGCarreras.Models.Inscripcion>

@{
    ViewData["Title"] = "Gestión de Participantes";
    var carrera = ViewData["Inscripcion"] as SGCarreras.Models.Carrera;
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="display-5 fw-bold text-primary">
                        <i class="fas fa-users me-3"></i>Gestión de Participantes
                    </h1>
                    <p class="lead text-muted mb-0">
                        Carrera: <strong>@carrera?.Nombre</strong> |
                        Total de inscripciones: <span class="badge bg-primary fs-6">@Model.Count()</span>
                    </p>
                </div>
                <div>
                    <a asp-action="Details" asp-controller="Carreras" asp-route-id="@carrera?.Id"
                       class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Volver a la Carrera
                    </a>
                </div>
            </div>

            <!-- Estadísticas Rápidas -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body text-center py-3">
                            <h6 class="card-title">Confirmadas</h6>
                            <h3 class="mb-0">@Model.Count(i => i.Estado == EstadoInscripcion.Confirmada)</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-warning text-dark">
                        <div class="card-body text-center py-3">
                            <h6 class="card-title">Pendientes</h6>
                            <h3 class="mb-0">@Model.Count(i => i.Estado == EstadoInscripcion.Pendiente)</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-danger text-white">
                        <div class="card-body text-center py-3">
                            <h6 class="card-title">Rechazadas</h6>
                            <h3 class="mb-0">@Model.Count(i => i.Estado == EstadoInscripcion.Rechazada)</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-secondary text-white">
                        <div class="card-body text-center py-3">
                            <h6 class="card-title">Canceladas</h6>
                            <h3 class="mb-0">@Model.Count(i => i.Estado == EstadoInscripcion.Cancelada)</h3>
                        </div>
                    </div>
                </div>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Tabla de Participantes -->
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-light">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-list-alt me-2"></i>
                        Lista de Inscripciones
                    </h4>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th>#</th>
                                    <th>Corredor</th>
                                    <th>Email</th>
                                    <th>Cédula</th>
                                    <th>Fecha Inscripción</th>
                                    <th>Estado</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var inscripcion in Model)
                                {
                                    <tr>
                                        <td class="fw-bold">@inscripcion.NumeroCorredor</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm bg-primary rounded-circle text-white d-flex align-items-center justify-content-center me-3"
                                                     style="width: 40px; height: 40px;">
                                                    @inscripcion.Corredor?.NombreCompleto?.Substring(0, 1).ToUpper()
                                                </div>
                                                <div>
                                                    <div class="fw-semibold">@inscripcion.Corredor?.NombreCompleto</div>
                                                    <small class="text-muted">ID: @inscripcion.CorredorId</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@inscripcion.Corredor?.Mail</td>
                                        <td>@inscripcion.Corredor?.Cedula</td>
                                        <td>@inscripcion.FechaInscripcion.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>
                                            <span class="badge @GetEstadoBadgeClass(inscripcion.Estado) fs-6">
                                                @inscripcion.Estado
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <!-- Botones de Cambio de Estado -->
                                                @if (inscripcion.Estado != EstadoInscripcion.Confirmada)
                                                {
                                                    <form asp-action="CambiarEstadoInscripcion" method="post" class="d-inline">
                                                        <input type="hidden" name="inscripcionId" value="@inscripcion.Id" />
                                                        <input type="hidden" name="nuevoEstado" value="@EstadoInscripcion.Confirmada" />
                                                        <button type="submit" class="btn btn-success btn-sm"
                                                                title="Confirmar inscripción" onclick="return confirm('¿Confirmar esta inscripción?')">
                                                            <i class="fas fa-check"></i>
                                                        </button>
                                                    </form>
                                                }

                                                @if (inscripcion.Estado != EstadoInscripcion.Rechazada)
                                                {
                                                    <form asp-action="CambiarEstadoInscripcion" method="post" class="d-inline">
                                                        <input type="hidden" name="inscripcionId" value="@inscripcion.Id" />
                                                        <input type="hidden" name="nuevoEstado" value="@EstadoInscripcion.Rechazada" />
                                                        <button type="submit" class="btn btn-danger btn-sm"
                                                                title="Rechazar inscripción" onclick="return confirm('¿Rechazar esta inscripción?')">
                                                            <i class="fas fa-times"></i>
                                                        </button>
                                                    </form>
                                                }

                                                @if (inscripcion.Estado != EstadoInscripcion.Pendiente)
                                                {
                                                    <form asp-action="CambiarEstadoInscripcion" method="post" class="d-inline">
                                                        <input type="hidden" name="inscripcionId" value="@inscripcion.Id" />
                                                        <input type="hidden" name="nuevoEstado" value="@EstadoInscripcion.Pendiente" />
                                                        <button type="submit" class="btn btn-warning btn-sm"
                                                                title="Marcar como pendiente">
                                                            <i class="fas fa-clock"></i>
                                                        </button>
                                                    </form>
                                                }

                                                <!-- Botón Eliminar -->
                                                <form asp-action="EliminarInscripcion" method="post" class="d-inline">
                                                    <input type="hidden" name="inscripcionId" value="@inscripcion.Id" />
                                                    <button type="submit" class="btn btn-outline-danger btn-sm"
                                                            title="Eliminar inscripción"
                                                            onclick="return confirm('¿Está seguro de eliminar esta inscripción? Esta acción no se puede deshacer.')">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Resumen de Acciones -->
            <div class="row mt-4">
                <div class="col-12">
                    <div class="card border-0 bg-light">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="fas fa-info-circle me-2"></i>Información de Estados
                            </h5>
                            <div class="row">
                                <div class="col-md-3">
                                    <span class="badge bg-success me-2">Confirmada</span>
                                    <small class="text-muted">- Inscripción aceptada</small>
                                </div>
                                <div class="col-md-3">
                                    <span class="badge bg-warning me-2">Pendiente</span>
                                    <small class="text-muted">- Esperando revisión</small>
                                </div>
                                <div class="col-md-3">
                                    <span class="badge bg-danger me-2">Rechazada</span>
                                    <small class="text-muted">- Inscripción rechazada</small>
                                </div>
                                <div class="col-md-3">
                                    <span class="badge bg-secondary me-2">Cancelada</span>
                                    <small class="text-muted">- Cancelada por corredor</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetEstadoBadgeClass(EstadoInscripcion estado)
    {
        return estado switch
        {
            EstadoInscripcion.Confirmada => "bg-success",
            EstadoInscripcion.Pendiente => "bg-warning text-dark",
            EstadoInscripcion.Rechazada => "bg-danger",
            EstadoInscripcion.Cancelada => "bg-secondary",
            _ => "bg-light text-dark"
        };
    }
}

<style>
    .card {
        transition: transform 0.2s ease;
    }

        .card:hover {
            transform: translateY(-2px);
        }

    .avatar-sm {
        font-weight: bold;
        font-size: 1.1rem;
    }

    .table th {
        border-top: none;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
    }

    .btn-group .btn {
        margin-right: 2px;
    }

        .btn-group .btn:last-child {
            margin-right: 0;
        }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
