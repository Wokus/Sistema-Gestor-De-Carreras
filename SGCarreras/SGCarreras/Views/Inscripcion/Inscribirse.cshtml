@model SGCarreras.Models.ViewModels.InscripcionViewModel

@{
    ViewData["Title"] = "Inscribirse en Carrera";
    var carrera = ViewData["Carrera"] as SGCarreras.Models.Carrera;
}

<div class="container mt-4">
    <h2 class="mb-4">Inscribirse en: @carrera?.Nombre</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">
                @if (Model.EsUsuarioRegistrado)
                {
                    <text>Confirmar Inscripción</text>
                }
                else
                {
                    <text>Registro e Inscripción</text>
                }
            </h5>
        </div>
        <div class="card-body">
            <form asp-action="Inscribirse" method="post">
                <input type="hidden" asp-for="CarreraId" />
                <input type="hidden" asp-for="EsUsuarioRegistrado" />

                @if (Model.EsUsuarioRegistrado)
                {
                    <div class="alert alert-info">
                        <h6>Datos del Corredor:</h6>
                        <p><strong>Nombre:</strong> @Model.CorredorExistente?.NombreCompleto</p>
                        <p><strong>Email:</strong> @Model.CorredorExistente?.Mail</p>
                        <p><strong>Cédula:</strong> @Model.CorredorExistente?.Cedula</p>
                    </div>
                }
                else
                {
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="NombreCompleto" class="form-label">Nombre Completo *</label>
                                <input asp-for="NombreCompleto" class="form-control" />
                                <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Cedula" class="form-label">Cédula *</label>
                                <input asp-for="Cedula" class="form-control" />
                                <span asp-validation-for="Cedula" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Email" class="form-label">Email *</label>
                                <input asp-for="Email" type="email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Sexo" class="form-label">Sexo *</label>
                                <select asp-for="Sexo" class="form-control">
                                    <option value="">Seleccionar...</option>
                                    <option value="0">Hombre</option>
                                    <option value="1">Mujer</option>
                                    <option value="2">Otro</option>
                                </select>
                                <span asp-validation-for="Sexo" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Contra" class="form-label">Contraseña *</label>
                                <input asp-for="Contra" type="password" class="form-control" />
                                <span asp-validation-for="Contra" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="ConfirmarContra" class="form-label">Confirmar Contraseña *</label>
                                <input asp-for="ConfirmarContra" type="password" class="form-control" />
                                <span asp-validation-for="ConfirmarContra" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Nacionalidad" class="form-label">Nacionalidad *</label>
                        <input asp-for="Nacionalidad" class="form-control" />
                        <span asp-validation-for="Nacionalidad" class="text-danger"></span>
                    </div>
                }

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-success btn-lg">
                        @if (Model.EsUsuarioRegistrado)
                        {
                            <text>Confirmar Inscripción</text>
                        }
                        else
                        {
                            <text>Crear Cuenta e Inscribirse</text>
                        }
                    </button>
                    <a asp-action="Calendarios" asp-controller="Carreras" class="btn btn-secondary btn-lg">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
