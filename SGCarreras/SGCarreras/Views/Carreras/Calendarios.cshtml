@model IEnumerable<SGCarreras.Models.Carrera>

@{
    ViewData["Title"] = "Calendarios";
    string filtro = ViewBag.FiltroActual as string ?? "Todas";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-5 fw-bold text-primary mb-2">Calendarios de Carreras</h1>
            <p class="lead text-muted">Explora y gestiona todas las carreras disponibles</p>
        </div>
        <div class="d-flex gap-2">
            <input type="text" id="searchInputCarreras" class="form-control" placeholder="Buscar carrera..." style="max-width: 250px;">
            <button class="btn btn-outline-secondary" id="refreshBtnCarreras">
                <i class="fas fa-sync-alt"></i>
            </button>
        </div>
    </div>

    <!-- Filtros -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title mb-3">
                <i class="fas fa-filter text-primary me-2"></i>Filtrar Carreras
            </h5>
            <div class="btn-group w-100" role="group" aria-label="Filtros de carreras">
                <a class="btn btn-outline-primary @(filtro == "Todas" ? "active" : "")" asp-action="Calendarios" asp-route-filtro="Todas">
                    <i class="fas fa-list me-2"></i>Todas
                </a>
                <a class="btn btn-outline-primary @(filtro == "Activas" ? "active" : "")" asp-action="Calendarios" asp-route-filtro="Activas">
                    <i class="fas fa-play-circle me-2"></i>Activas
                </a>
                <a class="btn btn-outline-primary @(filtro == "EnEspera" ? "active" : "")" asp-action="Calendarios" asp-route-filtro="EnEspera">
                    <i class="fas fa-clock me-2"></i>En Espera
                </a>
                <a class="btn btn-outline-primary @(filtro == "Finalizadas" ? "active" : "")" asp-action="Calendarios" asp-route-filtro="Finalizadas">
                    <i class="fas fa-flag-checkered me-2"></i>Finalizadas
                </a>
            </div>
        </div>
    </div>

    <!-- Tabla de Carreras -->
    <div class="card border-0 shadow-lg">
        <div class="card-header bg-light py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="card-title mb-0">
                    <i class="fas fa-calendar-alt text-primary me-2"></i>
                    Lista de Carreras
                </h4>
                <div>
                    <span class="badge bg-primary fs-6">@Model.Count() carreras</span>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0" id="carrerasTable">
                    <thead class="table-dark">
                        <tr>
                            <th class="ps-4">
                                <i class="fas fa-tag me-2"></i>Nombre
                            </th>
                            <th>
                                <i class="fas fa-map-marker-alt me-2"></i>Ubicación
                            </th>
                            <th>
                                <i class="fas fa-route me-2"></i>Kilómetros
                            </th>
                            <th>
                                <i class="fas fa-calendar me-2"></i>Fecha y Hora
                            </th>
                            <th>
                                <i class="fas fa-info-circle me-2"></i>Estado
                            </th>
                            <th class="text-center pe-4">
                                <i class="fas fa-cogs me-2"></i>Acciones
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle bg-primary text-white me-3">
                                            @{
                                                var inicial = "C";
                                                if (!string.IsNullOrEmpty(item.Nombre))
                                                {
                                                    inicial = item.Nombre.Substring(0, 1).ToUpper();
                                                }
                                            }
                                            @inicial
                                        </div>
                                        <div>
                                            <strong>@item.Nombre</strong>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">
                                        <i class="fas fa-map-marker-alt me-1"></i>@item.Ubicacion
                                    </span>
                                </td>
                                <td>
                                    <span class="fw-bold text-primary">@string.Format("{0:N2} km", item.KmTotales)</span>
                                </td>
                                <td>
                                    <div class="d-flex flex-column">
                                        <strong>@item.Fecha.ToString("dd/MM/yyyy")</strong>
                                        <small class="text-muted">@item.Fecha.ToString("HH:mm") hrs</small>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge @GetEstadoBadgeClass(item.Estado) fs-6">
                                        <i class="@GetEstadoIcon(item.Estado) me-1"></i>@item.Estado.ToString()
                                    </span>
                                </td>
                                <td class="text-center pe-4">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm"
                                           data-bs-toggle="tooltip" title="Ver detalles de la carrera">
                                            <i class="fas fa-eye"></i>
                                        </a>

                                        <!-- BOTÓN INSCRIBIRSE SOLO PARA CARRERAS EN ESPERA -->
                                        @if (item.Estado == SGCarreras.Models.Estado.EstadoEnum.En_espera)
                                        {
                                            <button class="btn btn-success btn-sm btn-inscribirse"
                                                    data-carrera-id="@item.Id"
                                                    data-carrera-nombre="@item.Nombre"
                                                    data-bs-toggle="tooltip"
                                                    title="Inscribirse en esta carrera">
                                                <i class="fas fa-user-plus"></i>
                                            </button>
                                        }
                                        else if (item.Estado == SGCarreras.Models.Estado.EstadoEnum.Activo)
                                        {
                                            <span class="btn btn-outline-secondary btn-sm"
                                                  data-bs-toggle="tooltip"
                                                  title="Carrera en curso - No se permiten inscripciones">
                                                <i class="fas fa-play-circle"></i>
                                            </span>
                                        }
                                        else if (item.Estado == SGCarreras.Models.Estado.EstadoEnum.Finalizada)
                                        {
                                            <span class="btn btn-outline-secondary btn-sm"
                                                  data-bs-toggle="tooltip"
                                                  title="Carrera finalizada">
                                                <i class="fas fa-flag-checkered"></i>
                                            </span>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-light py-3">
            <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">
                    Mostrando <strong>@Model.Count()</strong> carreras (@filtro.ToLower())
                </small>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Confirmación de Inscripción -->
<div class="modal fade" id="inscripcionModal" tabindex="-1" aria-labelledby="inscripcionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title" id="inscripcionModalLabel">
                    <i class="fas fa-exclamation-triangle me-2"></i>Ya estás inscrito
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center py-4">
                <div class="mb-3">
                    <i class="fas fa-user-check fa-3x text-warning"></i>
                </div>
                <h5 class="mb-3">Ya estás inscrito en esta carrera</h5>
                <p class="text-muted" id="modalCarreraNombre"></p>
                <p class="small text-muted">Puedes ver el estado de tu inscripción en la sección "Mis Carreras".</p>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cerrar
                </button>
                <a href="#" class="btn btn-primary" id="btnVerMisCarreras">
                    <i class="fas fa-running me-1"></i>Ver Mis Carreras
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Usuario No Autenticado -->
<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h5 class="modal-title text-white" id="loginModalLabel">
                    <i class="fas fa-sign-in-alt me-2"></i>Iniciar Sesión
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center py-4">
                <div class="mb-3">
                    <i class="fas fa-user-lock fa-3x text-info"></i>
                </div>
                <h5 class="mb-3">Debes iniciar sesión</h5>
                <p class="text-muted">Para inscribirte en una carrera, necesitas iniciar sesión en tu cuenta.</p>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancelar
                </button>
                <a href="@Url.Action("Login", "Account")" class="btn btn-primary">
                    <i class="fas fa-sign-in-alt me-1"></i>Iniciar Sesión
                </a>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetEstadoBadgeClass(SGCarreras.Models.Estado.EstadoEnum estado)
    {
        return estado switch
        {
            SGCarreras.Models.Estado.EstadoEnum.Activo => "bg-success",
            SGCarreras.Models.Estado.EstadoEnum.En_espera => "bg-warning text-dark",
            SGCarreras.Models.Estado.EstadoEnum.Finalizada => "bg-secondary",
            _ => "bg-light text-dark"
        };
    }

    private string GetEstadoIcon(SGCarreras.Models.Estado.EstadoEnum estado)
    {
        return estado switch
        {
            SGCarreras.Models.Estado.EstadoEnum.Activo => "fas fa-play-circle",
            SGCarreras.Models.Estado.EstadoEnum.En_espera => "fas fa-clock",
            SGCarreras.Models.Estado.EstadoEnum.Finalizada => "fas fa-flag-checkered",
            _ => "fas fa-info-circle"
        };
    }
}

