@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Inicializar tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Búsqueda en tiempo real
            const searchInputCarreras = document.getElementById('searchInputCarreras');
            const carrerasTable = document.getElementById('carrerasTable');

            if (carrerasTable) {
                const rowsCarreras = carrerasTable.getElementsByTagName('tbody')[0].getElementsByTagName('tr');

                searchInputCarreras.addEventListener('input', function() {
                    const filter = this.value.toLowerCase();

                    for (let i = 0; i < rowsCarreras.length; i++) {
                        const cells = rowsCarreras[i].getElementsByTagName('td');
                        let found = false;

                        for (let j = 0; j < cells.length - 1; j++) { // Excluir columna de acciones
                            const cellText = cells[j].textContent || cells[j].innerText;
                            if (cellText.toLowerCase().indexOf(filter) > -1) {
                                found = true;
                                break;
                            }
                        }

                        rowsCarreras[i].style.display = found ? '' : 'none';
                    }
                });

                // Botón de refresh
                document.getElementById('refreshBtnCarreras').addEventListener('click', function() {
                    this.classList.add('fa-spin');
                    setTimeout(() => {
                        this.classList.remove('fa-spin');
                    }, 1000);

                    searchInputCarreras.value = '';
                    for (let i = 0; i < rowsCarreras.length; i++) {
                        rowsCarreras[i].style.display = '';
                    }
                });

                // Botón de exportar (simulado)
                document.getElementById('exportBtnCarreras').addEventListener('click', function() {
                    const toast = document.createElement('div');
                    toast.className = 'alert alert-success alert-dismissible fade show position-fixed';
                    toast.style.top = '20px';
                    toast.style.right = '20px';
                    toast.style.zIndex = '9999';
                    toast.innerHTML = `
                        <i class="fas fa-check-circle me-2"></i>
                        Lista de carreras exportada correctamente
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    `;
                    document.body.appendChild(toast);

                    setTimeout(() => {
                        toast.remove();
                    }, 3000);
                });
            }

            // Manejo de botones de inscripción
            const botonesInscripcion = document.querySelectorAll('.btn-inscribirse');
            const inscripcionModal = new bootstrap.Modal(document.getElementById('inscripcionModal'));
            const loginModal = new bootstrap.Modal(document.getElementById('loginModal'));

            botonesInscripcion.forEach(boton => {
                boton.addEventListener('click', async function() {
                    const carreraId = this.getAttribute('data-carrera-id');
                    const carreraNombre = this.getAttribute('data-carrera-nombre');

                    // Mostrar loading en el botón
                    const originalHTML = this.innerHTML;
                    this.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
                    this.disabled = true;

                    try {
                        // Verificar si el usuario está inscrito llamando al método del controlador
                        const response = await fetch('@Url.Action("VerificarInscripcion", "Inscripcion")' + '?carreraId=' + carreraId);
                        const data = await response.json();

                        if (data.yaInscrito) {
                            // Mostrar modal de notificación
                            document.getElementById('modalCarreraNombre').textContent = carreraNombre;
                            inscripcionModal.show();
                        } else {
                            // Redirigir a la página de inscripción
                            window.location.href = '@Url.Action("Inscribirse", "Inscripcion")' + '?carreraId=' + carreraId;
                        }
                    } catch (error) {
                        console.error('Error al verificar inscripción:', error);
                        // En caso de error, redirigir directamente
                        window.location.href = '@Url.Action("Inscribirse", "Inscripcion")' + '?carreraId=' + carreraId;
                    } finally {
                        // Restaurar botón
                        this.innerHTML = originalHTML;
                        this.disabled = false;
                    }
                });
            });

            // Configurar enlace "Ver Mis Carreras" en el modal
            document.getElementById('btnVerMisCarreras').addEventListener('click', function() {
                // Aquí deberías poner la URL correcta para "Mis Carreras"
                window.location.href = '@Url.Action("Index", "MisCarreras")';
            });

            // Verificar autenticación al cargar la página
            function verificarAutenticacion() {
                // Esta función podría usarse para mostrar/ocultar elementos basados en autenticación
                // Por ahora, la verificación se hace en tiempo real al hacer clic
            }

            // Inicializar verificación de autenticación
            verificarAutenticacion();
        });
    </script>
}

