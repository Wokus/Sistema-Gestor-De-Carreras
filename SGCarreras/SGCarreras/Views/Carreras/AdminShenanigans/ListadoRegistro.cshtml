@model IEnumerable<SGCarreras.Models.Registro>

@{
    ViewData["Title"] = "ListadoRegistro";
}

<h1>ListadoRegistro</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Corredor.NombreCompleto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Corredor.Mail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.confirmado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Corredor.NombreCompleto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Corredor.Mail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.confirmado)
                </td>
            <td>
                <a asp-action="ConfirmarRegistro" asp-route-id="@item.Id">Condirmar Registro</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
