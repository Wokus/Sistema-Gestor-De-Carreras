@model SGCarreras.Models.ViewModels.Corredor2

@{
    ViewData["Title"] = "Buscar Corredor por Cédula";
    // Define el título para mantener el estilo consistente
    var TituloPagina = "Búsqueda de Corredor";
    var SubtituloPagina = "Ingrese la cédula para buscar al corredor";
}

<style>
    /* Estilos del otro archivo para la consistencia visual */
    .card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
        }

    .bg-primary {
        background: linear-gradient(135deg, var(--bs-primary) 0%, var(--bs-primary) 100%) !important;
    }

    .btn-primary {
        background-color: var(--bs-primary);
        border-color: var(--bs-primary);
        transition: background-color 0.2s ease, border-color 0.2s ease;
    }

        .btn-primary:hover {
            background-color: #0069d9; /* Tono más oscuro de primary de Bootstrap */
            border-color: #0062cc;
        }

    .form-control {
        border-radius: 0.5rem;
        padding: 0.75rem 1rem;
    }

    .control-label {
        font-weight: 600;
        color: #495057; /* Un color de texto más suave */
    }

    .text-danger {
        font-size: 0.875em; /* Tamaño de texto para validación */
    }

    .fas {
        font-family: 'Font Awesome 5 Free';
        font-weight: 900;
    }

    .fa-search::before {
        content: "🔍";
    }

    .fa-arrow-left::before {
        content: "⬅️";
    }

</style>

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-6 col-md-8 mx-auto">
            <div class="d-flex justify-content-between align-items-center mb-5">
                <div>
                    <h1 class="display-5 fw-bold text-primary">@TituloPagina</h1>
                    <p class="lead text-muted mb-0">@SubtituloPagina</p>
                </div>
            </div>

            <div class="card border-0 shadow-lg">
                <div class="card-header bg-light">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-user-circle text-primary me-2"></i>
                        Datos de Búsqueda
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="BuscarCorredorCorriendoce">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-4">
                            <label asp-for="Cedula" class="control-label">Cédula del Corredor</label>
                            <input asp-for="Cedula" class="form-control form-control-lg" placeholder="Ej: 12345678" />
                            <span asp-validation-for="Cedula" class="text-danger"></span>
                        </div>

                        <div class="form-group pt-2">
                            <button type="submit" class="btn btn-primary btn-lg w-100 shadow-sm">
                                Buscar Corredor
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-4 pt-3 border-top">
                <a asp-action=".." class="btn btn-outline-secondary">
                    Volver
                </a>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}