<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Búsqueda en tiempo real para resultados
        const searchInputResultados = document.getElementById('searchInputResultados');
        const resultadosTable = document.getElementById('resultadosTable');

        if (resultadosTable) {
            const rowsResultados = resultadosTable.getElementsByTagName('tbody')[0].getElementsByTagName('tr');

            searchInputResultados.addEventListener('input', function() {
                const filter = this.value.toLowerCase();

                for (let i = 0; i < rowsResultados.length; i++) {
                    const cells = rowsResultados[i].getElementsByTagName('td');
                    let found = false;

                    for (let j = 0; j < cells.length; j++) {
                        const cellText = cells[j].textContent || cells[j].innerText;
                        if (cellText.toLowerCase().indexOf(filter) > -1) {
                            found = true;
                            break;
                        }
                    }

                    rowsResultados[i].style.display = found ? '' : 'none';
                }
            });

            // Botón de refresh para resultados
            document.getElementById('refreshBtnResultados').addEventListener('click', function() {
                this.classList.add('fa-spin');
                setTimeout(() => {
                    this.classList.remove('fa-spin');
                }, 1000);

                searchInputResultados.value = '';
                for (let i = 0; i < rowsResultados.length; i++) {
                    rowsResultados[i].style.display = '';
                }
            });

            // Botón de exportar para resultados (simulado)
            document.getElementById('exportBtnResultados').addEventListener('click', function() {
                const toast = document.createElement('div');
                toast.className = 'alert alert-success alert-dismissible fade show position-fixed';
                toast.style.top = '20px';
                toast.style.right = '20px';
                toast.style.zIndex = '9999';
                toast.innerHTML = `
                    <i class="fas fa-check-circle me-2"></i>
                    Resultados exportados correctamente
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                `;
                document.body.appendChild(toast);

                setTimeout(() => {
                    toast.remove();
                }, 3000);
            });
        }
    });
</script>


